<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addnewcard">


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="378dp"
        android:layout_height="65dp"
        android:layout_margin="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="40sp"
            android:onClick="backtohome_addcard"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:background="@drawable/backarrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50sp"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:letterSpacing="0.02"
            android:text="Add New Card"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="26sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="11sp"
        android:layout_marginTop="12dp"
        android:background="@drawable/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">


    </LinearLayout>


    <ImageView
        android:id="@+id/image222"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/bluecard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:layout_constraintVertical_bias="0.09" />

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="390sp"
        android:background="@drawable/bluebg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image222"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_condensed_regular"
                android:letterSpacing="0.02"
                android:text="Enter Information"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/roboto_condensed_regular"
                android:letterSpacing="0.02"
                android:text="Card Number"
                android:textColor="@color/black"
                android:textSize="19sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6sp"
                android:inputType="number"
                android:background="@drawable/cardnumber"
                android:hint="1234"
                android:padding="15sp"
                android:textSize="22sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6sp"
                android:inputType="number"
                android:background="@drawable/cardnumber"
                android:hint="5678"
                android:padding="15sp"
                android:textSize="22sp" />

            <EditText
                android:inputType="number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6sp"
                android:background="@drawable/cardnumber"
                android:hint="9000"
                android:padding="15sp"
                android:textSize="22sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6sp"
                android:inputType="number"
                android:background="@drawable/cardnumber"
                android:hint="0000"
                android:padding="15sp"
                android:textSize="22sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:letterSpacing="0.02"
            android:text="Card Holder"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6sp"
            android:background="@drawable/cardnumber"
            android:padding="15sp"
            android:hint="John Doe"
            android:textSize="22sp" />


        <Button
            android:layout_width="290sp"
            android:id="@+id/addcard"
            android:layout_height="55sp"
            android:onClick="addCrd"
            android:layout_marginStart="50sp"
            android:layout_marginTop="19sp"
            android:background="@drawable/getstartedui"
            android:fontFamily="@font/roboto_condensed_regular"
            android:letterSpacing="0.02"
            android:text="Add Card"
            android:textAllCaps="false"
            android:textColor="#CCBBCC"
            android:textSize="22sp"
            android:textStyle="bold" />





    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>